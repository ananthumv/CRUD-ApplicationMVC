@{
}

@model List<CRUD_ApplicationMVC.Models.Entities.Employee>


<h1>Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Employee Id
            </th>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone No.
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>
                    <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-primary">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
