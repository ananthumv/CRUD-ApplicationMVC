@{
}

@model CRUD_ApplicationMVC.Models.Entities.Employee


<h1>Edit Employee</h1>

@if (Model is null)
{
    <p>No Employee found with this Id </p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Employee Id</label>
            <input type="text" class="form-control" asp-for="EmployeeId" readonly>
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name">
        </div>
        <div>
            <label class="form-label">Email</label>
            <input type="text" class="form-control" asp-for="Email">
        </div>
        <div>
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="Phone">
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Employees">
                Delete
            </button>>
        </div>

    </form>
}
